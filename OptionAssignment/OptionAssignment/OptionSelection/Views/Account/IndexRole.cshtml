@model IEnumerable<OptionSelection.Models.EditRoleViewModel>

@{
    ViewBag.Title = "IndexRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Create New", "RegisterRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteRole", new { id = item.RoleName })
            </td>
        </tr>
    }

</table>