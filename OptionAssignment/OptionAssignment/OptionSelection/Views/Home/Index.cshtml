<script>window.jQuery || document.write('<script src="js/jquery-1.7.2.min.js"><\/script>')</script>
<script>
    $(document).ready(function () {
        $('.carousel').carousel({
            interval: 3000
        });
    });
</script>
<title>BCIT :: Home</title>
<div class="container">
    <div class="col-lg-12" style="margin-left:auto; margin-right:auto;">
        <br/>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                <li data-target="#carousel-example-generic" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src=@Url.Content("~/Images/img1.png") />
                </div>
                <div class="item">
                    <img src=@Url.Content("~/Images/img2.png") />
                </div>
                <div class="item">
                    <img src=@Url.Content("~/Images/img3.png") />
                </div>
                <div class="item">
                    <img src=@Url.Content("~/Images/img4.png") />
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev"></a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next"></a>
        </div>
    </div>
</div>