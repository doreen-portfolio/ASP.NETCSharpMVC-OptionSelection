@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BCIT School of Computing :: @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <style>
        a.navbar-brand {
            background: url(../Images/logo.png) no-repeat top left;
            display: block;
            width: 150px;
            height: 150px;
            text-indent: -9999px; /* hides the link text */
        }
    </style>
</head>
<body style="background-color:grey;">
    <div class="container">
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Options Selection Form", "CreateChoice", "Home", new { area = "" }, null)</li>
                        @if (HttpContext.Current.User.IsInRole("Admin"))
                        {
                        <li>@Html.ActionLink("Options", "Index", "AdminOptionManagement", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Terms", "Index", "AdminTermManagement", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Users", "IndexUser", "Account", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Roles", "IndexRole", "Account", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Student Choices", "Index", "AdminStudentChoices", new { area = "" }, null)</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>


        <div class="container body-content" style="background-color:white;">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>